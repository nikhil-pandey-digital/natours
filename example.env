# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DATABASE='mongodb+srv://username:<PASSWORD>@cluster.mongodb.net/DatabaseName?retryWrites=true&w=majority'
DATABASE_PASSWORD='your_database_password'

# JWT Configuration
JWT_SECRET='your_jwt_secret_key_min_32_characters'
JWT_EXPIRES_IN='90d'
JWT_COOKIE_EXPIRES_IN='90'

# Stripe Payment Configuration
STRIPE_SECRET_KEY='sk_test_your_stripe_secret_key'
STRIPE_WEBHOOK_SECRET='whsec_your_stripe_webhook_secret'

# Email Configuration
EMAIL_FROM='your_email@example.com'

# SendinBlue/Brevo Configuration (for production emails)
SENDINBLUE_USERNAME='your_sendinblue_smtp_username'
SENDINBLUE_PASSWORD='your_sendinblue_smtp_password'

# Mailtrap Configuration (for development emails)
EMAIL_HOST='sandbox.smtp.mailtrap.io'
EMAIL_PORT='2525'
EMAIL_USERNAME='your_mailtrap_username'
EMAIL_PASSWORD='your_mailtrap_password'
